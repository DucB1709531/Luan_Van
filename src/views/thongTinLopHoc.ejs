<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông Tin Lớp Học</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div>
        <div class='table-container'>
            <h2><b>Thông Tin Lớp Học</b></h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên Lớp</th>
                        <th>ID Giáo Viên</th>
                        <th>Tên Giáo Viên</th>
                        <th>Khối Lớp</th>
                        <th>Loại Lớp</th>
                    </tr>
                </thead>
                <tbody>
                    <div></div>
                    <% for(let i=0; i< detailsLopHoc.length; i++){ %>
                        <tr>
                            <td>
                                <%= detailsLopHoc[i].id %>
                            </td>
                            <td>
                                <%= detailsLopHoc[i].tenLop %>
                            </td>
                            <td>
                                <%= idGV %>
                            </td>
                            <td>
                                <%= tenGiaoVien %>
                            </td>
                            <td>
                                <%= tenKhoiLop %>
                            </td>
                            <td>
                                <%= tenLoaiLop %>
                            </td>
                        </tr>
                        <form action="/sua-thong-tin-lop-hoc/<%= detailsLopHoc[i].id %>" method="GET">
                            <button class="btn6" type="submit">Sửa Thông Tin</button>
                        </form>
                        <% } %>
                </tbody>

            </table>
        </div>
    </div>
</body>

</html>