    <div class='create-user-container'>
        <form action="/tao-hoc-sinh-moi" method="POST">
            <div><b>Thêm Học Sinh Mới:</b></div>
            <div>
                <label>Họ Tên:</label>
                <input type="text" name="hoTen" required />
            </div>
            <div>
                <label>Ngày Sinh:</label>
                <input type="date" name="ngaySinh" required />
            </div>
            <div>
                <label>Giới Tính:</label>
                <input type="text" name="gioiTinh" required />
            </div>
            <div>
                <label>ID Phụ Huynh:</label>
                <input type="text" name="idPH" required />
            </div>
            <br>
            <div>
                <button class="btn6" type="submit" class="btn-submit">Thêm</button>
            </div>
        </form>

    </div>
