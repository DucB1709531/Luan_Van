<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Học Sinh</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/index.css">
    <script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>
    <script type="text/javascript" src="/js/xlsx.js"></script>
</head>

<body>
    <div class='table-container'>
        <h1 class="title-ds-hs"><b>Danh Sách Học Sinh Của Lớp <%= tenLop %></b></h1>
        <h2 class="title-ds-hs"><b>Giáo Viên: <%= hoTenGV %></b></h2>
        <h3 class="title-ds-hs"><b>Sỉ Số: <%= dataHocSinh.length %></b></h3>
        <button class="btn-export" onclick="ExportToExcel('xlsx', 'Danh_Sach_Hoc_Sinh_Lop_<%= tenLop %>')">Xuất File
            Excel</button>
        <table id="tbl_exporttable_to_xls" class="table" border="1">
            <thead>
                <tr bgcolor="#ddd">
                    <th>STT</th>
                    <th>Mã Số Hoc sinh</th>
                    <th>Họ Tên Học Sinh</th>
                    <th>Giới Tính</th>
                    <th>Ngày Sinh</th>
                    <th>ID Phụ Huynh</th>


                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i< dataHocSinh.length; i++){ %>
                    <% let day=dataHocSinh[i].ngaySinh.getDate(); let month=dataHocSinh[i].ngaySinh.getMonth() + 1; let
                        year=dataHocSinh[i].ngaySinh.getFullYear(); let date=day+'/'+month+'/'+year %>
                        <tr>

                            <td>
                                <%= i+1 %>
                            </td>

                            <td>
                                <%= dataHocSinh[i].id %>
                            </td>
                            <td>
                                <%= dataHocSinh[i].hoTen %>
                            </td>
                            <td>
                                <%= dataHocSinh[i].gioiTinh %>
                            </td>
                            <td>
                                <%= date %>
                            </td>
                            <td>
                                <%= dataHocSinh[i].idPH %>
                            </td>

                        </tr>
                        <% } %>
            </tbody>
        </table>
    </div>

</body>

</html>