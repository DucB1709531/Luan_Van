<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Của Giáo Viên</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/giao-vien/<%= detailsGiaoVien.id %>" method="GET">Thông Tin Giáo Viên</a>
    </div>
    <div>
        <div class='table-container'>
            <h2><b>Thông Tin Giáo Viên</b></h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ Tên Giáo Viên</th>
                        <th>Số Điện Thoại</th>
                        <th>Địa Chỉ</th>
                        <th>ID Tài Khoản</th>
                    </tr>
                </thead>
                <tbody>
                    <div></div>
                    <tr>
                        <td>
                            <%= detailsGiaoVien.id %>
                        </td>
                        <td>
                            <%= detailsGiaoVien.hoTenGV %>
                        </td>
                        <td>
                            <%= detailsGiaoVien.soDienThoaiGV %>
                        </td>
                        <td>
                            <%= detailsGiaoVien.diaChiGV %>
                        </td>
                        <td>
                            <%= detailsGiaoVien.coTK %>
                        </td>
                    </tr>
                    <form action="/gv-sua-thong-tin-giao-vien/<%= detailsGiaoVien.id %>" method="GET">
                        <button class="btn6" type="submit">Sửa Thông Tin</button>
                    </form>
                </tbody>
            </table>
        </div>
    </div>
    <form action="/xem-lop-hoc" method="post">
        <div>
            <input type="text" value="<%= detailsGiaoVien.id %>" hidden name="idGV" />
        </div>
        <div>
            <button class="btn6" type="submit" class="btn-save">Xem Lớp Chủ Nhiệm</button>
        </div>
    </form>
</body>

</html>