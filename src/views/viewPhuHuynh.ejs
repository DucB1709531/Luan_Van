    <div class="chat-popup" id="myForm">
        <form class="form-container" id="chatForm">
            <h1>Chat Bot Hỗ Trợ</h1>
            <label for="msg"><b>Nhắn Tin</b></label>
            <textarea placeholder="Nhập Tin nhắn.." name="msg" id="chatInput" required></textarea>
            <button type="submit" class="btn" id="sendButton">Gửi</button>
            <div class="chat-output-container">
                <div class="chat-output" id="chatOutput"></div>
                <div id="loginLinkContainer"></div>
            </div>
        </form>
    </div>


    <script>
        function sendMessage(event) {
            event.preventDefault(); // Không tải lại trang

            var message = {
                message: document.getElementById("chatInput").value,
            };

            fetch("http://localhost:5005/webhooks/rest/webhook", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify(message),
            })
                .then((response) => response.json())
                .then((data) => {
                    var output = data[0].text;

                    // Kiểm tra nếu câu trả lời chứa đường link đăng nhập
                    var linkRegex = /\[link\]/;
                    var match = output.match(linkRegex);

                    if (match) {
                        var loginLink = "http://localhost:3000/dang-nhap";

                        // Tạo đường link clickable
                        var clickableLink = "<a href='" + loginLink + "' target='_blank'>" + loginLink + "</a>";

                        // Thay thế đường link đầu tiên trong câu trả lời bằng đường link clickable
                        output = output.replace(linkRegex, clickableLink);
                    }

                    document.getElementById("chatOutput").innerHTML = output;
                    document.getElementById("chatInput").value = "";
                })
                .catch((error) => {
                    console.error(error);
                });
        }

        document.getElementById("chatForm").addEventListener("submit", sendMessage);
    </script>



