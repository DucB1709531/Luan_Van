<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Phụ Huynh</title>
    <link rel="stylesheet" href="/css/style.css">
    <script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>
    <script type="text/javascript" src="/js/xlsx.js"></script>
</head>

<body>
    <div class='table-container'>
        <h2><b>Danh Sách Phụ Huynh</b></h2>
        <button class="btn-export" onclick="ExportToExcel('xlsx', 'Danh_Sach_Phu_Huynh')">Xuất File
            Excel</button>
        <table id="tbl_exporttable_to_xls" border="1">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã Số Phụ Huynh</th>
                    <th>Họ Tên Phụ Huynh</th>
                    <th>Số Điện Thoại</th>
                    <th>Địa Chỉ</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i< dataPhuHuynh.length; i++){ %>
                    <tr>
                        <td>
                            <%= i+1 %>
                        </td>
                        <td>
                            <%= dataPhuHuynh[i].id %>
                        </td>
                        <td>
                            <%= dataPhuHuynh[i].hoTenPH %>
                        </td>
                        <td>
                            <%= dataPhuHuynh[i].soDienThoai %>
                        </td>
                        <td>
                            <%= dataPhuHuynh[i].diaChi %>
                        </td>
                        <td>
                            <%= dataPhuHuynh[i].email %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

    </div>
</body>


</html>